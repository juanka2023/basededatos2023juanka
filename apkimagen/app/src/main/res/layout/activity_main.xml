<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/ima1"
        android:layout_width="159dp"
        android:layout_height="181dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="32dp"
        android:onClick="im1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/cuatro" />

    <ImageView
        android:id="@+id/im2"
        android:layout_width="180dp"
        android:layout_height="230dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="100dp"
        android:onClick="im3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/im3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ima1"
        app:srcCompat="@mipmap/dos" />

    <ImageView
        android:id="@+id/im3"
        android:layout_width="167dp"
        android:layout_height="320dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="92dp"
        android:onClick="im4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@mipmap/tres" />

    <ImageView
        android:id="@+id/im4"
        android:layout_width="174dp"
        android:layout_height="218dp"
        android:layout_marginTop="16dp"
        android:onClick="im2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toEndOf="@+id/ima1"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/uno" />
</androidx.constraintlayout.widget.ConstraintLayout>